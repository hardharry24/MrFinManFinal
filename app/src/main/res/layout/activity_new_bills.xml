<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme_Activities"
    tools:context=".Activity_my_bills_add">


    <android.support.v7.widget.CardView
        android:id="@+id/amount"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/cardcolor"
        android:padding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="69dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/peso" />

                <EditText
                    android:id="@+id/txt_my_bill_amount"
                    android:layout_width="196dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:background="@color/transparent"
                    android:gravity="left"
                    android:hint="0.00"
                    android:inputType="numberDecimal"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="40dp" />


            </LinearLayout>

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/mygoal_new_backspace"
                android:layout_width="69dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="right"
                android:src="@drawable/backspace" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>


    <EditText
        android:id="@+id/txt_new_bill_name"
        style="@style/RobotoTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:drawableLeft="@drawable/ic_today_blue"
        android:drawablePadding="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/amount"
        android:hint="Bill Name"
        android:paddingLeft="10dp"
        android:textColor="@color/white"
        android:textColorHint="@color/dim_gray" />

    <EditText
        android:id="@+id/txt_new_bill_desc"
        style="@style/RobotoTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_below="@+id/txt_new_bill_name"
        android:layout_marginTop="5dp"
        android:drawableLeft="@drawable/ic_pen_24dp"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:hint="Description/Note"
        android:paddingLeft="10dp"
        android:textColor="@color/white"
        android:textColorHint="@color/dim_gray" />


    <EditText
        android:id="@+id/txt_new_bill_due_date"
        style="@style/RobotoTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="10dp"
        android:layout_below="@+id/txt_new_bill_desc"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:drawableLeft="@drawable/ic_target_date"
        android:drawablePadding="10dp"
        android:editable="false"
        android:gravity="center_vertical"
        android:hint="Target Date"
        android:paddingLeft="10dp"
        android:textColor="@color/white"
        android:textColorHint="@color/dim_gray" />



    <android.support.v7.widget.CardView
        android:id="@+id/spinnercard"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_below="@+id/txt_new_bill_due_date"
        android:backgroundTint="@color/white"
        android:padding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="64dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_today_24dp" />

                <Spinner
                    android:id="@+id/txt_spinner_new_bill_type"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:entries="@array/bill_type" />
            </LinearLayout>


        </RelativeLayout>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/cardbiller"
        android:layout_width="match_parent"
        android:layout_height="198dp"
        android:layout_below="@+id/spinnercard"
        android:layout_marginBottom="60dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="9dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <com.beardedhen.androidbootstrap.BootstrapWell
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/carmessage"
                android:layout_marginTop="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_gravity="center"
                        android:text="Biller:"
                        android:textColor="@color/dim_gray"
                        android:textSize="10dp" />

                    <TextView
                        android:id="@+id/txt_new_bill_biller"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:layout_marginTop="20dp"
                        android:text=""
                        android:textSize="25dp" />
                </RelativeLayout>
            </com.beardedhen.androidbootstrap.BootstrapWell>

            <android.support.v7.widget.CardView
                android:id="@+id/carmessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginEnd="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="2dp"
                app:cardCornerRadius="2dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_gravity="center"
                        android:layout_margin="2dp"
                        android:text="Message"
                        android:textColor="@color/dim_gray"
                        android:textSize="10dp" />

                    <TextView
                        android:id="@+id/txt_new_bill_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:layout_marginTop="20dp"
                        android:text=""
                        android:textSize="10dp" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>


            <Button
                android:id="@+id/dialogue_btnshowbiller"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:text="Choose Biller" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>


    <Button
        android:id="@+id/btn_new_bills_save"
        style="@style/RobotoTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="center"
        android:background="@color/black"
        android:drawablePadding="2dip"
        android:gravity="center"
        android:paddingLeft="30dip"
        android:paddingRight="29dip"
        android:singleLine="true"
        android:text="SAVE"
        android:textColor="@color/white"
        android:textSize="20dip" />
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">


    <GridView
        android:id="@+id/grid_view_add_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:numColumns="3">

    </GridView>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent">

          <com.beardedhen.androidbootstrap.AwesomeTextView
              android:id="@+id/btn_add_to__category"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentStart="true"
              android:layout_alignParentTop="true"
              android:layout_marginStart="27dp"
              android:drawableLeft="@drawable/ic_add_24dp"
              android:text="Add to my category"
              android:textColor="@color/white" />

          <com.beardedhen.androidbootstrap.AwesomeTextView
              android:id="@+id/btn_add_to__category_cancel"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentEnd="true"
              android:layout_alignParentTop="true"
              android:layout_marginEnd="86dp"
              android:drawableLeft="@drawable/ic_close_black_24dp"
              android:text="Cancel"
              android:textColor="@color/white" />

      </RelativeLayout>



  </LinearLayout>
</LinearLayout>
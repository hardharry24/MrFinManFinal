<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="5dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginBottom="10dp">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:cardCornerRadius="5dp"
        android:backgroundTint="@color/white_smoke">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/my_budget_plan_icon"
                android:layout_width="28dp"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="5dp" />


            <TextView
                android:id="@+id/my_budget_plan_name"
                style="@style/RobotoTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/my_budget_plan_icon"
                android:layout_marginTop="2dp"
                android:layout_marginStart="3dp"
                android:text="Salary"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/dim_gray"
                android:textSize="20dp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/my_budget_plan_perc"
                style="@style/RobotoTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/my_budget_plan_name"
                android:text="Salary"
                android:layout_toRightOf="@+id/my_budget_plan_icon"
                android:layout_marginStart="3dp"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/gray"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/my_budget_plan_rem_perc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="250dp"
                android:layout_marginTop="2dp"
                android:text="Salary"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/gray"
                android:textSize="12dp" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>



</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_margin="20dp"
    android:id="@+id/bill_dialogue"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.AppCompat.Light"
    android:background="@color/background">

    <ImageView
        android:id="@+id/btnClose"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_close"
        android:layout_alignParentEnd="true"
        android:layout_margin="5dp"
        android:clickable="true"/>

    <TextView
        android:id="@+id/bill_title"
        android:textColor="@color/cardcolor"
        style="@style/RobotoTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Set Budget"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:textSize="25dp" />



    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/bill_title"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:id="@+id/toggle"
                android:layout_marginTop="10dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:layout_width="100dp"
                android:layout_height="30dp"
                app:cardCornerRadius="2dp">
                <ToggleButton
                    android:id="@+id/togglebutton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/transparent"
                    android:textOn="Turn On"
                    android:textOff="Turn off"
                    android:onClick="onToggleClicked"/>
            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/lblMessage"
                style="@style/RobotoTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/toggle"
                android:layout_marginStart="20dp"
                android:layout_marginTop="18dp"
                android:text="welcome" />

            <android.support.v7.widget.CardView
                android:id="@+id/cardSpinner"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_below="@id/lblMessage">

                <Spinner
                    android:id="@+id/chooseType"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:entries="@array/budget_type">

                </Spinner>

            </android.support.v7.widget.CardView>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/amountLayout"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:layout_below="@+id/cardSpinner"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp">

                <EditText
                    android:id="@+id/txtamount"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="numberDecimal"
                    android:hint="Amount"
                    android:textSize="20dp" />


            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/btnOK"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="OK"
                android:layout_alignParentRight="true"
                android:background="@color/transparent"
                android:textColor="@color/cardcolor"
                android:textSize="25dp"/>

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="98dp"
                android:background="@color/transparent"
                android:text="CANCEL"
                android:textColor="@color/cardcolor"
                android:textSize="25dp" />

        </RelativeLayout>




    </android.support.v7.widget.CardView>


</RelativeLayout>
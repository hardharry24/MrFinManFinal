<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dim_gray"
    android:theme="@style/AppTheme_Activities"
    tools:context=".Activity_expense">

    <TextView
        android:id="@+id/expense_date_now"
        style="@style/RobotoTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Date"
        android:drawableRight="@drawable/ic_pen"
        android:textColor="@color/white"
        android:drawablePadding="10dp"
        android:clickable="true"
        android:textSize="25dp" />



    <android.support.v7.widget.CardView
        android:id="@+id/cardamount"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="55dp"
        android:backgroundTint="@color/cardcolor"
        android:padding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="69dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/peso" />

                <EditText
                    android:id="@+id/txt_expense_amount"
                    android:layout_width="196dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:background="@color/transparent"
                    android:gravity="left"
                    android:hint="0.00"
                    android:inputType="numberDecimal"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="40dp" />


            </LinearLayout>

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/expense_backspace"
                android:layout_width="69dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="right"
                android:src="@drawable/backspace" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/budgetBox"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/cardamount"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="@color/white_smoke"
        app:cardCornerRadius="5dp">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/white"
            android:layout_margin="2dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp">

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical" >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Budget Type"
                        style="@style/RobotoTextViewStyle"
                        android:textColor="@color/black"
                        android:textSize="10dp"
                        android:gravity="center"/>
                    <TextView
                        android:id="@+id/lbl_budget_type"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Not Set"
                        android:textSize="15dp"
                        style="@style/RobotoTextViewStyle"
                        android:textStyle="bold"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical" >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Budget Remaining"
                        style="@style/RobotoTextViewStyle"
                        android:textColor="@color/black"
                        android:textSize="10dp"
                        android:gravity="center"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:orientation="vertical" >
                          <RelativeLayout
                              android:layout_width="match_parent"
                              android:layout_height="match_parent">
                              <TextView
                                  android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:textSize="5dp"
                                  android:text="Allocation"
                                  android:textColor="@color/black"
                                  style="@style/RobotoTextViewStyle"/>
                              <TextView
                                  android:id="@+id/lbl_budget_alloc"
                                  android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:layout_centerVertical="true"
                                  android:text="Php 0.0"
                                  android:textSize="10dp"
                                  android:textColor="@color/bootstrap_brand_success"
                                  android:layout_alignParentBottom="true"
                                  android:gravity="center"/>
                          </RelativeLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:orientation="vertical" >
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="5dp"
                                    android:textColor="@color/black"
                                    android:text="Remaining"
                                    style="@style/RobotoTextViewStyle"/>
                                <TextView
                                    android:id="@+id/lbl_budget_rem"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:text="Php 0.0"
                                    android:textSize="10dp"
                                    android:textColor="@color/bootstrap_brand_danger"
                                    android:layout_alignParentBottom="true"
                                    android:gravity="center"/>
                            </RelativeLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
        </android.support.v7.widget.CardView>
    </android.support.v7.widget.CardView>



    <android.support.v7.widget.CardView
        android:id="@+id/boxBrowse"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/budgetBox"
        app:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/txt_expense_camera"
                style="@style/RobotoTextViewStyle"
                android:layout_width="251dp"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:drawableLeft="@drawable/ic_photo_library_white"
                android:drawablePadding="10dp"
                android:drawableTint="@color/gray"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:text="Browse Image Receipt"
                android:textColor="@color/gray"
                android:textColorHint="@color/white"
                android:textSize="15dp" />

            <ImageView
                android:layout_margin="4dp"
                android:id="@+id/img_expense_receipt"
                android:layout_width="71dp"
                android:layout_height="61dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/no_image"
                android:background="@color/white" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/boxdescription"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_below="@+id/boxBrowse"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        app:cardCornerRadius="5dp">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/white_smoke"
            android:layout_margin="2dp">
            <EditText
                android:id="@+id/txt_expense_note"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:drawablePadding="10dp"
                android:hint="Note / Description"
                android:background="@color/transparent"
                android:maxLines="5"
                android:drawableLeft="@android:drawable/ic_menu_edit"
                android:paddingLeft="10dp"
                android:textColorHint="@color/gray"
                android:textColor="@color/black"
                style="@style/RobotoTextViewStyle"
                android:gravity="center_vertical" />
        </android.support.v7.widget.CardView>
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/lblchoose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose category"
        android:layout_below="@+id/boxdescription"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:textColor="@color/white"
        style="@style/RobotoTextViewStyle"/>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/lblchoose"
        android:layout_marginBottom="55dp"
        app:cardCornerRadius="10dp"
        android:padding="10dp" >

        <RelativeLayout
            android:id="@+id/relative_container_expense"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <GridView
                android:id="@+id/grid_view_category"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:columnWidth="110dp"
                android:fitsSystemWindows="true"
                android:gravity="center"
                android:numColumns="3"
                android:scrollbars="vertical">

            </GridView>

        </RelativeLayout>

    </android.support.v7.widget.CardView>


    <Button
        android:id="@+id/btn_expense_save"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="center"
        android:background="@color/actionBar"
        android:drawablePadding="2dip"
        android:gravity="center"
        android:paddingLeft="30dip"
        android:paddingRight="29dip"
        android:singleLine="true"
        android:text="SAVE"
        style="@style/RobotoTextViewStyle"
        android:textColor="@color/white"
        android:textSize="20dip" />


</RelativeLayout>
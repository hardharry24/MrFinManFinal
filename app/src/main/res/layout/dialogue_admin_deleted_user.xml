<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:id="@+id/bill_dialogue"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.AppCompat.Light"
    android:background="@color/background">

    <TextView
        android:id="@+id/titleHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DELETED USER"
        style="@style/RobotoTextViewStyle"
        android:textSize="20dp"
        android:textColor="@color/cardcolor"
        android:gravity="center"/>

    <ImageView
        android:id="@+id/btnGenerateRep"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/titleHeader"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"
        android:src="@drawable/ic_file_download_black_24dp"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/btnGenerateRep"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        app:cardCornerRadius="5dp"
        android:layout_marginBottom="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="@color/background">

            <ListView
                android:id="@+id/listView_deleted_acc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></ListView>
        </RelativeLayout>


    </android.support.v7.widget.CardView>


</RelativeLayout>
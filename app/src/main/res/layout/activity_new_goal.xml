<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme_Activities"
    android:background="@color/dim_gray"
    tools:context=".Activity_my_goals_add">

    <android.support.v7.widget.CardView
        android:id="@+id/amount"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/cardcolor"
        android:padding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="69dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/peso" />

                <EditText
                    android:id="@+id/txt_my_goal_amount"
                    android:layout_width="198dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:background="@color/transparent"
                    android:gravity="left"
                    android:hint="0.00"
                    android:inputType="numberDecimal"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="40dp" />


            </LinearLayout>

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/mygoal_new_backspace"
                android:layout_width="69dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="right"
                android:src="@drawable/backspace" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/goalname"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_below="@+id/amount"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:textColorHint="@color/white">

        <EditText
            android:id="@+id/txt_my_goal_add_name"
            style="@style/RobotoTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/ic_event_note"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:hint="Goal name"
            android:textColor="@color/white"
            android:textColorHint="@color/white_smoke"
            android:paddingLeft="10dp" />


    </android.support.design.widget.TextInputLayout>

   <android.support.design.widget.TextInputLayout
       android:id="@+id/goaldesc"
       android:layout_width="match_parent"
       android:layout_height="58dp"
       android:layout_marginStart="10dp"
       android:layout_marginEnd="10dp"
       android:layout_below="@+id/goalname"
       android:textColorHint="@color/white">

       <EditText
           android:id="@+id/txt_my_goal_add_note"
           style="@style/RobotoTextViewStyle"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:textColorHint="@color/white_smoke"
           android:drawableLeft="@drawable/ic_pen_24dp"
           android:drawablePadding="10dp"
           android:gravity="center_vertical"
           android:textColor="@color/white"
           android:hint="Note / Description"
           android:paddingLeft="10dp" />

   </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_below="@+id/goaldesc"
        android:textColorHint="@color/white">

        <EditText
            android:id="@+id/txt__new_goal_target_date"
            style="@style/RobotoTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/ic_target_date"
            android:drawablePadding="10dp"
            android:editable="false"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textColorHint="@color/white_smoke"
            android:hint="Target Date"
            android:paddingLeft="10dp" />

    </android.support.design.widget.TextInputLayout>




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose category"
        android:layout_marginTop="240dp"
        android:layout_marginLeft="17dp"
        android:textColor="@color/white_smoke"
        style="@style/RobotoTextViewStyle"/>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="270dp"
        android:layout_marginBottom="55dp"
        android:padding="10dp" >

        <RelativeLayout
            android:id="@+id/relative_container_expense"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <GridView
                android:id="@+id/grid_add_goal_view_category"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnWidth="110dp"
                android:gravity="center"
                android:numColumns="3"
                android:scrollbars="vertical">

            </GridView>

        </RelativeLayout>

    </android.support.v7.widget.CardView>


    <Button
        android:id="@+id/btn_new_goal_save"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="center"
        android:background="@color/black"
        android:drawablePadding="2dip"
        android:gravity="center"
        android:paddingLeft="30dip"
        android:paddingRight="29dip"
        android:singleLine="true"
        android:text="SAVE"
        style="@style/RobotoTextViewStyle"
        android:textColor="@color/white"
        android:textSize="20dip" />


</RelativeLayout>
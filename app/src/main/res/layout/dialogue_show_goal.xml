<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="450dp"
    android:layout_margin="20dp"
    android:theme="@style/Theme.AppCompat.Light"
    android:background="@color/background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Goal Details"
        android:layout_margin="5dp"
        android:textSize="20dp"
        android:textColor="@color/cardcolor"
        android:fontFamily="@font/dancingfont"
        android:layout_centerHorizontal="true"/>

    <com.beardedhen.androidbootstrap.BootstrapWell
        android:layout_width="match_parent"
        android:layout_height="373dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/goal_dialogue_days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="0"
                android:layout_marginStart="15dp"
                android:textSize="30dp"
                />

            <TextView
                android:id="@+id/goal_dialogue_dtRem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="41dp"
                android:text="Days Remaining:"
                android:textColor="@color/dim_gray"
                android:textSize="10dp" />

            <ImageView
                android:id="@+id/goal_dialogue_img_icon"
                android:layout_width="74dp"
                android:layout_height="77dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp" />

            <TextView
                android:id="@+id/goal_dialogue_Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/goal_dialogue_img_icon"
                android:layout_centerHorizontal="true"
                android:text="Name"
                android:textSize="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/goal_dialogue_amount"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="-124dp"
                android:text="Amount:"
                android:textColor="@color/dim_gray"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/goal_dialogue_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/goal_dialogue_targetdate"
                android:layout_marginTop="124dp"
                android:text="Amount"
                android:textSize="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/goal_dialogue_targetdate"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="-170dp"
                android:text="Target date:"
                android:textColor="@color/dim_gray"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/goal_dialogue_targetdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="175dp"
                android:text="Target Date"
                android:textSize="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/goal_dialogue_desc"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="-215dp"
                android:text="Description:"
                android:textColor="@color/dim_gray"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/goal_dialogue_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="215dp"
                android:layout_marginStart="15dp"
                android:text="Description"
                android:textSize="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="81dp"
                android:text="Status:"
                android:textColor="@color/dim_gray"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/goal_dialogue_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="265dp"
                android:text="Sfdftatus"
                android:layout_marginStart="15dp"
                android:textColor="@color/white"
                android:textSize="15dp" />

        </RelativeLayout>

    </com.beardedhen.androidbootstrap.BootstrapWell>


    <Button
        android:id="@+id/goal_dialogue_close"
        android:layout_width="22dp"
        android:layout_height="27dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="@color/transparent"
        android:text="X"
        android:textColor="@color/red"
        android:textStyle="bold" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Biller.Activity_biller_profile">

    <RelativeLayout
        android:id="@+id/RelativeHead"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="@mipmap/profile_bg">

        <ImageView
            android:id="@+id/user_profile_photo"
            android:layout_width="103dp"
            android:layout_height="102dp"
            android:layout_below="@+id/login_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/user_backgroud_login"
            android:elevation="4dp"
            android:src="@drawable/profile" />

        <TextView
            android:id="@+id/lblBillerUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            style="@style/RobotoTextViewStyle"
            android:text="Hard Harry Nadel"
            android:textColor="@color/gray"
            android:layout_below="@+id/user_profile_photo"
            android:textSize="15dp"/>

        <android.support.v7.widget.CardView
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:cardCornerRadius="5dp"
            android:layout_margin="5dp"
            android:layout_alignParentEnd="true"
            android:backgroundTint="@color/white_smoke">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:backgroundTint="@color/white">
                <ImageView
                    android:id="@+id/btnEdit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:src="@android:drawable/ic_menu_edit"/>
            </android.support.v7.widget.CardView>

        </android.support.v7.widget.CardView>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/RelativeHead"
        android:background="@color/white_smoke">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/white"
            android:layout_margin="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="30dp"
                        android:layout_marginStart="30dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Personal Information"
                                android:gravity="center"
                                style="@style/RobotoTextViewStyle"
                                android:textColor="@color/gray"
                                android:textSize="20dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp">
                            <android.support.v7.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:backgroundTint="@color/white_smoke">
                                <android.support.design.widget.TextInputLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:textColorHint="@color/cardcolor">
                                    <EditText
                                        android:id="@+id/txtBillerProfLname"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        style="@style/RobotoTextViewStyle"
                                        android:background="@color/transparent"
                                        android:layout_marginStart="10dp"
                                        android:textColor="@color/gray"
                                        android:drawablePadding="10dp"
                                        android:textSize="15dp"
                                        android:text="Nadela"
                                        android:hint="Lastname"
                                        android:drawableLeft="@drawable/ic_person"
                                        android:drawableTint="@color/cardcolor"/>
                                </android.support.design.widget.TextInputLayout>

                            </android.support.v7.widget.CardView>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp">
                            <android.support.v7.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:backgroundTint="@color/white_smoke">
                                <android.support.design.widget.TextInputLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:textColorHint="@color/cardcolor">
                                    <EditText
                                        android:id="@+id/txtBillerProfFname"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        style="@style/RobotoTextViewStyle"
                                        android:background="@color/transparent"
                                        android:layout_marginStart="10dp"
                                        android:textColor="@color/gray"
                                        android:drawablePadding="10dp"
                                        android:textSize="15dp"
                                        android:hint="Firstname"
                                        android:text="fddf"
                                        android:drawableLeft="@drawable/ic_person"
                                        android:drawableTint="@color/cardcolor"/>
                                </android.support.design.widget.TextInputLayout>
                            </android.support.v7.widget.CardView>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp">
                            <android.support.v7.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:backgroundTint="@color/white_smoke">
                                <android.support.design.widget.TextInputLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:textColorHint="@color/cardcolor">
                                    <EditText
                                        android:id="@+id/txtBillerProfMI"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        style="@style/RobotoTextViewStyle"
                                        android:background="@color/transparent"
                                        android:layout_marginStart="10dp"
                                        android:maxLength="1"
                                        android:textColor="@color/gray"
                                        android:drawablePadding="10dp"
                                        android:hint="Middle Initial"
                                        android:textSize="15dp"
                                        android:text="fddf"
                                        android:drawableLeft="@drawable/ic_person"
                                        android:drawableTint="@color/cardcolor"/>
                                </android.support.design.widget.TextInputLayout>
                            </android.support.v7.widget.CardView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp">
                            <android.support.v7.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:backgroundTint="@color/white_smoke">
                                <android.support.design.widget.TextInputLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:textColorHint="@color/cardcolor">
                                    <EditText
                                        android:id="@+id/txtBillerProfEmail"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        style="@style/RobotoTextViewStyle"
                                        android:background="@color/transparent"
                                        android:layout_marginStart="10dp"
                                        android:textColor="@color/gray"
                                        android:drawablePadding="10dp"
                                        android:hint="Email"
                                        android:textSize="15dp"
                                        android:text="fddf"
                                        android:drawableLeft="@drawable/ic_email_blue"
                                        android:drawableTint="@color/cardcolor"/>
                                </android.support.design.widget.TextInputLayout>
                            </android.support.v7.widget.CardView>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp">
                            <android.support.v7.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:backgroundTint="@color/white_smoke">
                                <android.support.design.widget.TextInputLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:textColorHint="@color/cardcolor">
                                    <EditText
                                        android:id="@+id/txtBillerProfcontactNo"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        style="@style/RobotoTextViewStyle"
                                        android:background="@color/transparent"
                                        android:layout_marginStart="10dp"
                                        android:textColor="@color/gray"
                                        android:drawablePadding="10dp"
                                        android:hint="Contact Number"
                                        android:inputType="number"
                                        android:maxLength="12"
                                        android:textSize="15dp"
                                        android:text="fddf"
                                        android:drawableLeft="@drawable/ic_phone_android"
                                        android:drawableTint="@color/cardcolor"/>
                                </android.support.design.widget.TextInputLayout>
                            </android.support.v7.widget.CardView>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="User Account"
                                android:gravity="center"
                                style="@style/RobotoTextViewStyle"
                                android:textColor="@color/gray"
                                android:textSize="20dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp">
                            <android.support.v7.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:backgroundTint="@color/white_smoke">
                                <android.support.design.widget.TextInputLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:textColorHint="@color/cardcolor">
                                    <EditText
                                        android:id="@+id/txtBillerProfUsername"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        style="@style/RobotoTextViewStyle"
                                        android:background="@color/transparent"
                                        android:layout_marginStart="10dp"
                                        android:textColor="@color/gray"
                                        android:drawablePadding="10dp"
                                        android:hint="Username"
                                        android:textSize="15dp"
                                        android:text="fddf"
                                        android:drawableLeft="@drawable/ic_person"
                                        android:drawableTint="@color/cardcolor"/>
                                </android.support.design.widget.TextInputLayout>
                            </android.support.v7.widget.CardView>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp">
                            <android.support.v7.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:backgroundTint="@color/white_smoke">
                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/ic_lock"
                                    android:tint="@color/cardcolor"
                                    android:layout_margin="10dp"/>
                                <android.support.design.widget.TextInputLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:textColorHint="@color/cardcolor"
                                    app:passwordToggleEnabled="true"
                                    app:passwordToggleTint="@color/cardcolor">
                                    <EditText
                                        android:id="@+id/txtBillerProfPassword"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        style="@style/RobotoTextViewStyle"
                                        android:background="@color/transparent"
                                        android:layout_marginStart="40dp"
                                        android:textColor="@color/gray"
                                        android:drawablePadding="10dp"
                                        android:inputType="textPassword"
                                        android:hint="Password"
                                        android:textSize="15dp"
                                        android:text="fddf"
                                        android:drawableLeft="@drawable/ic_lock"
                                        android:drawableTint="@color/cardcolor"/>
                                </android.support.design.widget.TextInputLayout>
                            </android.support.v7.widget.CardView>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Company Profile"
                                android:gravity="center"
                                style="@style/RobotoTextViewStyle"
                                android:textColor="@color/gray"
                                android:textSize="20dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp">
                            <android.support.v7.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:backgroundTint="@color/white_smoke">
                                <android.support.design.widget.TextInputLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:textColorHint="@color/cardcolor">
                                    <EditText
                                        android:id="@+id/txtBillerComName"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        style="@style/RobotoTextViewStyle"
                                        android:background="@color/transparent"
                                        android:layout_marginStart="10dp"
                                        android:textColor="@color/gray"
                                        android:drawablePadding="10dp"
                                        android:hint="Company"
                                        android:textSize="15dp"
                                        android:text="fddf"
                                        android:drawableLeft="@drawable/ic_person"
                                        android:drawableTint="@color/cardcolor"/>
                                </android.support.design.widget.TextInputLayout>
                            </android.support.v7.widget.CardView>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp">
                            <android.support.v7.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:backgroundTint="@color/white_smoke">
                                <android.support.design.widget.TextInputLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:textColorHint="@color/cardcolor">
                                    <EditText
                                        android:id="@+id/txtBillerComAddress"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        style="@style/RobotoTextViewStyle"
                                        android:background="@color/transparent"
                                        android:layout_marginStart="10dp"
                                        android:textColor="@color/gray"
                                        android:drawablePadding="10dp"
                                        android:hint="Address"
                                        android:textSize="15dp"
                                        android:text="fddf"
                                        android:drawableLeft="@drawable/ic_person"
                                        android:drawableTint="@color/cardcolor"/>
                                </android.support.design.widget.TextInputLayout>
                            </android.support.v7.widget.CardView>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp">
                            <android.support.v7.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:backgroundTint="@color/white_smoke">
                                <android.support.design.widget.TextInputLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:textColorHint="@color/cardcolor">
                                    <EditText
                                        android:id="@+id/txtBillerComContact"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        style="@style/RobotoTextViewStyle"
                                        android:background="@color/transparent"
                                        android:layout_marginStart="10dp"
                                        android:textColor="@color/gray"
                                        android:drawablePadding="10dp"
                                        android:hint="Company Contact Number"
                                        android:textSize="15dp"
                                        android:text="fddf"
                                        android:drawableLeft="@drawable/ic_person"
                                        android:drawableTint="@color/cardcolor"/>
                                </android.support.design.widget.TextInputLayout>
                            </android.support.v7.widget.CardView>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp">
                            <android.support.v7.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:backgroundTint="@color/white_smoke">
                                <android.support.design.widget.TextInputLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:textColorHint="@color/cardcolor">
                                    <EditText
                                        android:id="@+id/txtBillerComEmail"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        style="@style/RobotoTextViewStyle"
                                        android:background="@color/transparent"
                                        android:layout_marginStart="10dp"
                                        android:textColor="@color/gray"
                                        android:drawablePadding="10dp"
                                        android:hint="Company Email"
                                        android:textSize="15dp"
                                        android:text="fddf"
                                        android:drawableLeft="@drawable/ic_person"
                                        android:drawableTint="@color/cardcolor"/>
                                </android.support.design.widget.TextInputLayout>
                            </android.support.v7.widget.CardView>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:id="@+id/linearBtn">
                            <android.support.v7.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                app:cardCornerRadius="5dp"
                                android:backgroundTint="@color/bootstrap_brand_success">
                                <Button
                                    android:id="@+id/btnProfSave"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="Save Changes"
                                    android:background="@color/transparent"
                                    />
                            </android.support.v7.widget.CardView>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="30dp">

                        </LinearLayout>
                    </LinearLayout>
                </ScrollView>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </RelativeLayout>

</RelativeLayout>
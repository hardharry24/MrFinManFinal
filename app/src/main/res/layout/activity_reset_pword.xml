<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relative_activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5fb0c9"
    android:orientation="vertical"
    android:scrollbarAlwaysDrawVerticalTrack="true">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mr.FinMan"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_margin="5dp"/>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/login_title"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="140dp"
        android:background="#fff"
        android:elevation="4dp"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/txtConfirmation"
            style="@style/RobotoTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:text="Reset Password"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/txtInfo"
            style="@style/RobotoTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtConfirmation"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Code sent through email and phone number!"
            android:textSize="15dp" />


        <android.support.v7.widget.CardView
            android:id="@+id/cardviewPword"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/txtInfo"
            android:backgroundTint="@color/lavender"
            android:layout_marginTop="25dp">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/pword"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                app:passwordToggleEnabled="true">

                <EditText
                    android:id="@+id/txtPassword"
                    style="@style/RobotoTextViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:singleLine="true"
                    android:inputType="textPassword"
                    android:textSize="20dp"
                    android:textColor="@color/gray"
                    android:background="@color/transparent"
                    android:hint="Password" />

            </android.support.design.widget.TextInputLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardviewRePword"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/cardviewPword"
            android:backgroundTint="@color/lavender"
            android:layout_marginTop="10dp"
            >
            <android.support.design.widget.TextInputLayout
                android:layout_margin="3dp"
                android:id="@+id/repword"
                app:passwordToggleEnabled="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/txtRePassword"
                    style="@style/RobotoTextViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:singleLine="true"
                    android:inputType="textPassword"
                    android:textSize="20dp"
                    android:hint="Re-Password"
                    android:textColor="@color/gray"
                    android:background="@color/transparent"
                    />


            </android.support.design.widget.TextInputLayout>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:id="@+id/btnCard"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/cardviewRePword"
            android:backgroundTint="@color/cardcolor">

            <Button
                android:id="@+id/btnCheck"
                style="@style/RobotoTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:text="Save Changes"
                android:textColor="@color/white"
                android:textSize="17dp" />

        </android.support.v7.widget.CardView>


    </RelativeLayout>

    <ImageView
        android:id="@+id/user_profile_photo"
        android:layout_width="103dp"
        android:layout_height="102dp"
        android:layout_below="@+id/login_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/user_backgroud_login"
        android:elevation="4dp"
        android:src="@drawable/profile" />
</RelativeLayout>
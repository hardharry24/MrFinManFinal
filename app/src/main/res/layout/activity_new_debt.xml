<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme_Activities"
    android:background="@color/dim_gray"
    tools:context=".Activity_my_debt_add">

    <android.support.v7.widget.CardView
        android:id="@+id/amount"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/cardcolor"
        android:padding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="69dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/peso" />

                <EditText
                    android:id="@+id/txt_my_debt_amount"
                    android:layout_width="198dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:background="@color/transparent"
                    android:gravity="left"
                    android:hint="0.00"
                    android:inputType="numberDecimal"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="40dp" />


            </LinearLayout>

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/mygoal_new_backspace"
                android:layout_width="69dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="right"
                android:src="@drawable/backspace" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/Ldbname"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/amount" >

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tDname"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <EditText
                android:id="@+id/txt_my_goal_debt_name"
                style="@style/RobotoTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/ic_event_note"
                android:drawablePadding="10dp"
                android:hint="Debt name"
                android:background="@color/transparent"
                android:paddingLeft="10dp"
                android:inputType="text"
                android:textColor="@color/black"
                android:textColorHint="@color/gray" />


        </android.support.design.widget.TextInputLayout>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/partial_payment"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="@color/white_smoke"
        android:layout_below="@+id/Ldbname"
        app:cardCornerRadius="5dp">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="2dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/peso_sign"
                    android:layout_width="69dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/peso" />
                <android.support.design.widget.TextInputLayout
                    android:layout_toRightOf="@+id/peso_sign"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <EditText
                        android:id="@+id/txt_add_p_amount"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/transparent"
                        android:inputType="numberDecimal"
                        style="@style/RobotoTextViewStyle"
                        android:textColor="@color/gray"
                        android:textColorHint="@color/gray"
                        android:hint="Enter Partial Payment"
                        android:text="0"
                        android:textSize="20dp" />
                </android.support.design.widget.TextInputLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/Ldbnote"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/partial_payment" >

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tNote"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColorHint="@color/gray">

            <EditText
                android:id="@+id/txt_my_goal_debt_note"
                style="@style/RobotoTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/ic_pen_24dp"
                android:background="@color/transparent"
                android:drawablePadding="10dp"
                android:textColor="@color/black"
                android:hint="Note / Description"
                android:inputType="text"
                android:paddingLeft="10dp" />
        </android.support.design.widget.TextInputLayout>

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/paymentFor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Ldbnote"
        android:layout_marginStart="10dp"
        android:textColor="@color/white"
        style="@style/RobotoTextViewStyle"
        android:text="Payable for:"/>

    <android.support.v7.widget.CardView
        android:id="@+id/_days"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_below="@+id/paymentFor"
        android:backgroundTint="@color/white_smoke"
        android:layout_marginTop="2dp"
        android:padding="10dp">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:backgroundTint="@color/white">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <EditText
                    android:id="@+id/debt_no"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/transparent"
                    style="@style/RobotoTextViewStyle"
                    android:inputType="number"
                    android:hint="No"
                    android:gravity="center"/>
            </android.support.design.widget.TextInputLayout>

        </android.support.v7.widget.CardView>

    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/spinnercard"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_below="@+id/paymentFor"
        android:layout_toRightOf="@+id/_days"
        android:backgroundTint="@color/white"
        android:layout_marginTop="2dp"
        android:padding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="64dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_today_24dp" />

                <TextView
                    android:id="@+id/lbltype"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    style="@style/RobotoTextViewStyle"
                    android:text="Month/s"/>
               <!-- <Spinner
                    android:id="@+id/spinner_new_debt_type"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:entries="@array/debt_type" />-->
            </LinearLayout>


        </RelativeLayout>
    </android.support.v7.widget.CardView>



    <android.support.v7.widget.CardView
        android:id="@+id/Ldbdate"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/spinnercard" >


        <android.support.design.widget.TextInputLayout
            android:id="@+id/lyoutTargetDate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColorHint="@color/gray">

            <EditText
                android:id="@+id/txt__new_debt_target_date"
                style="@style/RobotoTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/ic_target_date"
                android:drawablePadding="10dp"
                android:editable="false"
                android:background="@color/transparent"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:hint="Due Date"
                android:paddingLeft="10dp" />
        </android.support.design.widget.TextInputLayout>

    </android.support.v7.widget.CardView>


    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Debt Overview"
        android:layout_marginLeft="10dp"
        android:textColor="@color/white_smoke"
        android:layout_below="@+id/Ldbdate"
        style="@style/RobotoTextViewStyle"/>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_below="@+id/title"
        android:layout_marginBottom="55dp"
        android:padding="10dp" >

        <RelativeLayout
            android:id="@+id/relative_container_expense"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/dbt_details"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=""
                    android:gravity="center"
                    android:layout_margin="10dp"
                    android:textSize="15dp"
                    android:textColor="@color/gray"
                    style="@style/RobotoTextViewStyle"/>

            </ScrollView>
        </RelativeLayout>

    </android.support.v7.widget.CardView>


    <Button
        android:id="@+id/btn_new_debt_save"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="center"
        android:background="@color/cardcolor"
        android:drawablePadding="2dip"
        android:gravity="center"
        android:paddingLeft="30dip"
        android:paddingRight="29dip"
        android:singleLine="true"
        android:text="SAVE"
        style="@style/RobotoTextViewStyle"
        android:textColor="@color/white"
        android:textSize="20dip" />


</RelativeLayout>
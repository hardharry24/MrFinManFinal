<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    tools:context=".fragment_main">


    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nestedScrollViewDash"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="16dp">

            <android.support.v7.widget.CardView
                android:id="@+id/lblDateChoosen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/background"
                android:layout_centerHorizontal="true"
                app:cardCornerRadius="5dp">
                <TextView
                    android:id="@+id/lbl_month"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:text="20, September"
                    android:background="@color/transparent"
                    android:textSize="20dp" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="15dp"
                android:layout_alignParentLeft="true"
                android:backgroundTint="@color/background"
                app:cardCornerRadius="5dp">

                <com.beardedhen.androidbootstrap.AwesomeTextView
                    android:id="@+id/lbl_main_date_back"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:bootstrapBrand="success"
                    android:textSize="40dp"
                    android:clickable="true"
                    android:layout_margin="5dp"
                    app:fontAwesomeIcon="fa_chevron_left"/>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/lblNext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginRight="15dp"
                android:layout_alignParentRight="true"
                android:backgroundTint="@color/background"
                app:cardCornerRadius="5dp">

                <com.beardedhen.androidbootstrap.AwesomeTextView
                    android:id="@+id/lbl_main_date_forward"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:bootstrapBrand="success"
                    android:textSize="40dp"
                    android:clickable="true"
                    android:layout_margin="5dp"
                    app:fontAwesomeIcon="fa_chevron_right"/>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
            android:id="@+id/btnGuide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/background"
            app:cardCornerRadius="5dp"
            android:layout_alignParentEnd="true"
            android:layout_margin="20dp"
            android:layout_below="@+id/lblNext">
            <com.beardedhen.androidbootstrap.AwesomeTextView
                android:id="@+id/lbl_guide"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:bootstrapBrand="info"
                android:textSize="20dp"
                android:clickable="true"
                android:layout_margin="5dp"
                app:fontAwesomeIcon="fa_question"/>
        </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/btnRefresh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/background"
                app:cardCornerRadius="5dp"
                android:layout_alignParentStart="true"
                android:layout_margin="20dp"
                android:layout_below="@+id/lblNext">
                <com.beardedhen.androidbootstrap.AwesomeTextView
                    android:id="@+id/lbl_Refresh"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:bootstrapBrand="info"
                    android:textSize="20dp"
                    android:clickable="true"
                    android:layout_margin="5dp"
                    app:fontAwesomeIcon="fa_refresh"/>
            </android.support.v7.widget.CardView>

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/myChart"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="300dp"
                android:layout_below="@+id/lblNext"/>
            <TextView
                android:id="@+id/lblTotalIncome"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:textSize="13dp"
                android:textColor="@color/bootstrap_brand_success"
                android:gravity="center"
                android:text=""
                android:layout_height="300dp"
                android:layout_below="@+id/lblNext"/>

        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>


    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/coordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="80dp">

        <at.markushi.ui.CircleButton
            android:id="@+id/fab_expense"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:src="@drawable/ic_minus"
            android:layout_gravity="bottom|left"
            app:cb_color="@color/red"
            app:cb_pressedRingWidth="8dip" />

        <android.support.v7.widget.CardView
            android:id="@+id/CardSavings"
            android:layout_width="130dp"
            android:layout_height="75dp"
            app:cardCornerRadius="5dp"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="5dp"
                    style="@style/RobotoTextViewStyle"
                    android:textSize="10dp"
                    android:text="TOTAL SAVINGS"/>

                <TextView
                    android:id="@+id/lbl_Total_savings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:text="000.00"
                    android:textSize="20dp"/>

                <TextView
                    android:id="@+id/lblSavingTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_below="@+id/lbl_Total_savings"
                    style="@style/RobotoTextViewStyle"
                    android:textSize="10dp"
                    android:text="SAVINGS FOR "/>

                <TextView
                    android:id="@+id/lblSavingMonth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_below="@+id/lblSavingTitle"
                    style="@style/RobotoTextViewStyle"
                    android:textColor="@color/white"
                    android:textSize="10dp"
                    android:text="0.0"/>
            </RelativeLayout>

        </android.support.v7.widget.CardView>


        <at.markushi.ui.CircleButton
            android:id="@+id/fab_income"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:src="@drawable/ic_plus"
            android:layout_gravity="bottom|right"
            app:cb_color="@color/green"
            app:cb_pressedRingWidth="8dip" />



    </android.support.design.widget.CoordinatorLayout>

    <RelativeLayout
        android:id="@+id/design_bottom_sheet_testing"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dim_gray"
        app:behavior_hideable="true"
        app:behavior_peekHeight="70dp"
        app:elevation="4dp"
        app:layout_behavior="@string/bottom_sheet_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/btn_lbl_show_transaction"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@color/actionBar"
                android:layout_gravity="bottom|center"
                android:text="Balance Php 0.00"
                style="@style/RobotoTextViewStyle"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:clickable="true"
                android:drawableLeft="@drawable/ic_menu_24dp"
                android:drawableRight="@drawable/ic_menu_24dp"/>

            <ListView
                android:id="@+id/listview_dash_transactions"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">
            </ListView>

        </LinearLayout>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:backgroundTint="@color/cardcolor"
            android:layout_alignParentBottom="true">
             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:orientation="vertical">
                 <TextView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:gravity="center"
                     android:textSize="15dp"
                     android:textColor="@color/black"
                     android:text="Total Expense"/>
                 <TextView
                     android:id="@+id/lbl_total_expense"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:gravity="center"
                     android:textSize="20dp"
                     android:textColor="@color/white"
                     android:text="Php 0.00"/>
             </LinearLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>


</android.support.design.widget.CoordinatorLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme_Activities"
    tools:context=".Activity_my_budget_plan">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_margin="5dp"
       android:orientation="vertical">
       <com.github.mikephil.charting.charts.PieChart
           android:id="@+id/myChart_budget_plan"
           android:layout_width="match_parent"
           android:layout_height="300dp"/>

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="40dp"
           android:layout_marginStart="5dp"
           android:layout_marginEnd="5dp"
           android:background="@drawable/textbox">
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Total Expense"
               style="@style/RobotoTextViewStyle"
               android:textSize="10dp"
               android:layout_margin="5dp"/>

           <TextView
               android:id="@+id/lblTotalExpense"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text=""
               style="@style/RobotoTextViewStyle"
               android:textSize="20dp"
               android:textStyle="bold"
               android:textColor="@color/bootstrap_brand_danger"
               android:layout_centerVertical="true"
               android:gravity="center"
               android:layout_margin="5dp"/>
       </RelativeLayout>


       <android.support.v7.widget.CardView
           android:id="@+id/box"
           android:layout_width="match_parent"
           android:layout_height="260dp"
           android:layout_margin="5dp">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="vertical">

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Remaining Allocation"
                   android:gravity="center"
                   android:textSize="25dp"
                   android:textColor="@color/white_smoke"
                   android:background="@color/cardcolor"
                   android:layout_margin="2dp"/>

               <ListView
                   android:id="@+id/my_budget_plan_listview"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_marginStart="5dp"
                   android:layout_marginEnd="5dp"></ListView>

           </LinearLayout>


       </android.support.v7.widget.CardView>
   </LinearLayout>
    </ScrollView>
</RelativeLayout>